<Grid x:Class="GameRes.Formats.GUI.WidgetPFS"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:p="clr-namespace:GameRes.Formats.Properties">
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    
    <Label Content="Archive Version:" Grid.Row="0" Grid.Column="0" 
           HorizontalAlignment="Right" VerticalAlignment="Center" Margin="5"/>
    <ComboBox Name="VersionCombo" Grid.Row="0" Grid.Column="1" 
              Margin="5" Width="100" HorizontalAlignment="Left">
            <ComboBoxItem Content="Version 2"/>
            <ComboBoxItem Content="Version 4 (Encrypted)"/>
            <ComboBoxItem Content="Version 5 (Encrypted)"/>
            <ComboBoxItem Content="Version 6" IsSelected="True"/>
            <ComboBoxItem Content="Version 8 (Encrypted)"/>
            <ComboBoxItem Content="Version 9 (Encrypted)"/>
    </ComboBox>
    
    <Label Content="Text Encoding:" Grid.Row="1" Grid.Column="0" 
           HorizontalAlignment="Right" VerticalAlignment="Center" Margin="5"/>
    <ComboBox Name="EncodingCombo" Grid.Row="1" Grid.Column="1" 
              Margin="5" Width="200" HorizontalAlignment="Left"
              ItemsSource="{Binding}" DisplayMemberPath="EncodingName"
              SelectedValuePath="Encoding"/>
</Grid>