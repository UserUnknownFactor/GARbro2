<Grid x:Class="GameRes.Formats.GUI.WidgetAFA"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:gre="clr-namespace:GameRes.Extensions;assembly=GameRes"
      xmlns:p="clr-namespace:GameRes.Formats.Properties">
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    
    <Label Content="{gre:Localize VersionLabel}" Grid.Row="0" Grid.Column="0" 
           HorizontalAlignment="Right" VerticalAlignment="Center"/>
    <ComboBox Name="Version" Grid.Row="0" Grid.Column="1" Margin="5" 
              HorizontalAlignment="Left" Width="100"
              SelectedValuePath="Tag"
              SelectedValue="{Binding Source={x:Static p:Settings.Default}, Path=AFAVersion}">
        <ComboBoxItem Content="Version 1" Tag="1"/>
        <ComboBoxItem Content="Version 2" Tag="2"/>
        <ComboBoxItem Content="Version 3" Tag="3"/>
    </ComboBox>
    
    <CheckBox Name="EncryptAff" Grid.Row="1" Grid.Column="1" Margin="5"
              Content="{gre:Localize AFAEncryptAffLabel}"
              IsChecked="{Binding Source={x:Static p:Settings.Default}, Path=AFAEncryptAff}"/>

    <Label Content="{gre:Localize CompressionLevelLabel}" Grid.Row="2" Grid.Column="0" 
           HorizontalAlignment="Right" VerticalAlignment="Center"/>
    <ComboBox Name="CompressionLevel" Grid.Row="2" Grid.Column="1" Margin="5"
              HorizontalAlignment="Left" Width="100"
              SelectedValuePath="Tag"
              SelectedValue="{Binding Source={x:Static p:Settings.Default}, Path=AFACompressionLevel}">
        <ComboBoxItem Content="Store" Tag="0"/>
        <ComboBoxItem Content="Fastest" Tag="1"/>
        <ComboBoxItem Content="Fast" Tag="3"/>
        <ComboBoxItem Content="Normal" Tag="6"/>
        <ComboBoxItem Content="Maximum" Tag="9"/>
    </ComboBox>
</Grid>