<StackPanel x:Class="GameRes.Formats.GUI.WidgetQLIE"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:gre="clr-namespace:GameRes.Extensions;assembly=GameRes"
        xmlns:p="clr-namespace:GameRes.Formats.Properties"
            Orientation="Vertical">
            <StackPanel>
                <Label Target="{Binding ElementName=Scheme}" 
                       Content="{gre:Localize SchemeLabel}"/>
                <ComboBox Name="Scheme" Width="250" HorizontalAlignment="Left"
                          SelectedValue="{Binding Source={x:Static p:Settings.Default}, Path=QLIEScheme, Mode=TwoWay}"/>
            </StackPanel>
</StackPanel>
