<Grid x:Class="GameRes.Formats.GUI.CreateVFFWidget"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Margin="10">
    <Grid.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Grid.Resources>

    <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    
    <!-- Title -->
    <Border Grid.Row="0" 
            BorderBrush="#007ACC" 
            BorderThickness="0,0,0,2"
            Margin="0,0,0,15">
        <TextBlock Text="LiveMaker VFF Settings" 
                   FontSize="16"
                   FontWeight="Light"
                   Foreground="#007ACC"
                   Margin="0,0,0,5"/>
    </Border>
    
    <!-- Compression Section -->
    <StackPanel Grid.Row="1" Margin="0,0,0,20">
        <TextBlock Text="COMPRESSION"
                   FontSize="11"
                   FontWeight="SemiBold"
                   Foreground="Gray"
                   Margin="0,0,0,10"/>
        
        <Border Name="CompressionSettingsGroup"
                Background="#F8F8F8" 
                BorderBrush="#E0E0E0" 
                BorderThickness="1"
                CornerRadius="3"
                Padding="15,10">
            <StackPanel>
                <CheckBox Name="CompressionCheckBox" 
                          Content="Compress files using zlib" 
                          IsChecked="True"
                          FontSize="13"
                          Margin="0,5"/>
                
                <CheckBox Name="ScrambleCheckBox" 
                          Content="Scramble file data for obfuscation" 
                          IsChecked="False"
                          FontSize="13"
                          Checked="ScrambleCheckBox_Checked"
                          Unchecked="ScrambleCheckBox_Unchecked"
                          Margin="0,5"/>
                
                <DockPanel Margin="25,10,0,5">
                    <Label Content="Seed:" 
                           Name="SeedLabel"
                           Width="50"
                           IsEnabled="False"
                           VerticalAlignment="Center"/>
                    <TextBox Name="ScrambleSeedBox" 
                             Text="F8EA"
                             Width="80"
                             IsEnabled="False"
                             Margin="0,0,10,0"
                             VerticalAlignment="Center"/>
                    <TextBlock Text="Hexadecimal value (default: F8EA)"
                               FontSize="11"
                               Foreground="Gray"
                               VerticalAlignment="Center"/>
                </DockPanel>
            </StackPanel>
        </Border>
    </StackPanel>
    
    <!-- Repacking Section -->
    <StackPanel Grid.Row="2">
        <TextBlock Text="REPACKING"
                   FontSize="11"
                   FontWeight="SemiBold"
                   Foreground="Gray"
                   Margin="0,0,0,10"/>
        
        <Border Background="#F8F8F8" 
                BorderBrush="#E0E0E0" 
                BorderThickness="1"
                CornerRadius="3"
                Padding="15,10">
            <StackPanel>
                <CheckBox Name="PreserveLayoutCheckBox" 
                          Content="Preserve original file order and compression settings" 
                          IsChecked="True"
                          FontSize="13"
                          Checked="PreserveLayoutCheckBox_Checked"
                          Unchecked="PreserveLayoutCheckBox_Unchecked"
                          Margin="0,5,0,10"/>
                
                <Border BorderBrush="#E0E0E0" 
                        BorderThickness="0,1,0,0" 
                        Padding="0,10,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0"
                                   Text="For EXE archive creation, provide the original executable:"
                                   FontSize="11"
                                   Foreground="#666"
                                   Margin="0,0,0,8"/>
                        
                        <DockPanel Grid.Row="1">
                            <Button Name="BrowseExeButton"
                                    Content="Browse..."
                                    Click="BrowseExeButton_Click"
                                    DockPanel.Dock="Right"
                                    Padding="12,6"
                                    Margin="8,0,0,0"/>
                            <TextBox Name="SourceExeBox"
                                     TextChanged="SourceExeBox_TextChanged"
                                     VerticalAlignment="Center"/>
                        </DockPanel>
                    </Grid>
                </Border>
            </StackPanel>
        </Border>
    </StackPanel>
</Grid>